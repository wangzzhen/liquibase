<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="createSysInfo-20200630-1" author="wz" >
        <createTable tableName="sys_info" remarks="系统信息">
            <column name="id" type="int" autoIncrement="true" remarks="系统id，主键">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="varchar(50)" remarks="系统名">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(50)" remarks="系统值">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="createUser-20200630-1" author="wz">
        <createTable tableName="user" remarks="用户表">
            <column name="id" type="int" autoIncrement="true" remarks="用户id，主键">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="username" type="varchar(50)" remarks="用户名">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(50)" remarks="用户密码">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>